<Window x:Class="KiwoomTrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiwoomTrade"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="250">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="StockCodeTextBox"/>
            <TextBox x:Name="PriceTextBox">-</TextBox>
            <TextBox x:Name="QuantityTextBox">1000</TextBox>
            <Button x:Name="BuyButton" Click="BuyButton_Click">+</Button>
            <Button x:Name="SellButton" Click="SellButton_Click">-</Button>
            <TextBox x:Name="ResultTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="300" IsReadOnly="True" FontSize="8"/>
        </StackPanel>
    </Grid>
</Window>
